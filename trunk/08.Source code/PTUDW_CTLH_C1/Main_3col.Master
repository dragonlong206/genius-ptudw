                    <asp:TextBox ID="txtUsername" runat="server" CssClass="textbox" 
                        ToolTip="Tên đăng nhập" Text="Tên đăng nhập"></asp:TextBox>                
                    <asp:TextBox ID="txtPassword" runat="server" CssClass="textbox" 
                        TextMode="Password" ToolTip="Mật khẩu" Text="123456"></asp:TextBox>
                    <asp:Button ID="txtButton" runat="server" CssClass="login_button" Text="Đăng nhập"/>
                    
                    <div class="links">
                        <a href="#">Quên mật khẩu</a>  |  <a href="#">Đăng ký</a>
                    </div>
                </div><!--end login-->                 	
        
        
                <div id="menu"><!--menu-->
                    <div id="menu_bg"><!--menu background-->
                        <ul>
                            <li><a href="#">Trang chủ</a></li>
                            <li><a href="#">Giới thiệu</a></li>
